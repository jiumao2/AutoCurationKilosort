{
    "detectNoiseClusters":{
        "n_random_spikes": 100,
        "min_firing_rate": 0.05,
        "min_signal_to_noise_ratio": 2,
        "waveform_window": [-31, 32],
        "baseline_window": [-31, 21]
    },
    
    "removeNoiseInsideCluster":{
        "verbose": true,
        "n_pc_feature": 2,
        "n_random_spikes": 100,
        "threshold": 5,
        "waveform_window": [-31, 32]
    },

    "rasterMetric":{
        "t_pre_ms": -1000,
        "t_post_ms": 1000,
        "binwidth_ms": 20,
        "temporal_corr_thres": -0.3,
        "peth_corr_thres": 0.3
    },

    "merging":{
        "verbose": true,
        "n_random_spikes": 100,
        "waveform_window": [-31, 32],
        "max_distance_um": 40,
        "binwidth_firing_rate_sec": 60,
        "n_channel_to_compare": 8,
        "isi_violation_thres": 0.1,
        "min_mean_cross_corr": 10,
        "cross_corr_range": [2,100],
        "cross_corr_gaussian_kernel": 2,
        "rasterMetric": true,
        "eventsIncluded": ["LeverPress", "Valve", "Trigger"]
    },

    "splitting":{
        "verbose": true,
        "min_cluster_percentage": 10,
        "n_random_spikes": 200,
        "waveform_window": [-10, 20],
        "n_channels_included": 4,
        "hartigans_dip_test_alpha": 0.05
    },

    "duplicatedClusters":{
        "verbose": true,
        "dt": 0.5,
        "overlap_percentage": 0.1,
        "n_random_spikes": 100,
        "waveform_window": [-31, 32]
    },

    "qualityMetrics":{
        "metricNames": ["ISI violations", "Amplitude cutoffs", "Presence ratio", "Median Amplitude", "Isolation distance", "D prime", "Nearest-neighbor miss rate",
            "Nearest-neighbor hit rate", "L ratio"],
        "metricFieldNames": ["isi_violations", "amplitude_cutoffs", "presence_ratio", "amplitude_median", "isolation_distance", "d_prime", "nn_miss_rate",
        "nn_hit_rate", "l_ratio"],
        "metricTypes": ["less", "less", "greater", "greater", "greater", "greater", "less", "greater", "less"],

        "goodCriteria": {
            "isi_violations": 0.05,
            "presence_ratio": 0.95,
            "amplitude_cutoffs": 0.05,
            "nn_hit_rate": 0.80
        },

        "muaCriteria": {
            "isi_violations": 0.50,
            "presence_ratio": 0.90,
            "amplitude_cutoffs": 0.10
        },

        "num_channels_to_compare": 7,
        "max_spikes_for_unit": 500,
        "max_spikes_for_nn": 10000,
        "n_neighbors": 4,
        "n_silhouette": 10000
    },

    "realignSpikeTimes":{
        "n_random_spikes": 100,
        "waveform_window": [-31, 32],
        "baseline_window": [-31, 21],
        "verbose": false
    }
}